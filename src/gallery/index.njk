---
title: Photo gallery
layout: "base.njk"
---

<link href="{{ '/static/css/gallery.css' | url }}" rel="stylesheet">

<div class="container-gallery" style="margin-top: 80px;" loading="lazy">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item text-dark"><a href="/">Home</a></li>
          <li class="breadcrumb-item text-dark active" aria-current="page">Photo gallery</li>
        </ol>
    </nav>
    <div class="jumbotron jumbotron-fluid mb-4">
        <p class="lead text-light">Photo gallery</p>
    </div>

    <div class="row-gallery px-md-5">

    <div class="col-md-4 px-2">
        {% for img in "src/static/img/gallery/gallery1/*.{gif,jpg,jpeg}" | gallery | reverse  %}
            <a href="{{ img | replace('src/static/img/gallery/gallery1/', '/gallery/photos/')}}" data-lightbox="gallery" data-title="{{ img }}">
                <img src="{{ img | replace('src/static/img/', '/')}}" class="img-fluid my-2" alt="{{ img }}">
            </a>
        {% endfor %}
    </div>

    <div class="col-md-4 px-2">
        {% for img in "src/static/img/gallery/gallery2/*.{gif,jpg,jpeg}" | gallery | reverse  %}
            <a href="{{ img | replace('src/static/img/gallery/gallery2/', '/gallery/photos/')}}" data-lightbox="gallery" data-title="{{ img }}">
                <img src="{{ img | replace('src/static/img/', '/')}}" class="img-fluid my-2" alt="{{ img }}">
            </a>
        {% endfor %}
    </div>

    <div class="col-md-4 px-2">
        {% for img in "src/static/img/gallery/gallery3/*.{gif,jpg,jpeg}" | gallery | reverse  %}
            <a href="{{ img | replace('src/static/img/gallery/gallery3/', '/gallery/photos/')}}" data-lightbox="gallery" data-title="{{ img }}">
                <img src="{{ img | replace('src/static/img/', '/')}}" class="img-fluid my-2" alt="{{ img }}">
            </a>
        {% endfor %}
    </div>

    </div>
</div>